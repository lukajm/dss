<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>Register</title>

    <!-- CSS link-->
    <link rel="stylesheet" href="Stylesheet.css">

</head>
<body>
    <!--Registration form-->
    <div class="container">
         <!--Fixed position top nav bar-->
        <div class="navbar">
            <a href="home.html"><img src="New_Logo_Audiophiles.png" class ="logo" width="150px"></a>
            <nav>
                <ul>
                    <li> <a href="/">Home</a> </li>
                    <li> <a href="/users/login">Login</a> </li>
                    <li> <a href="/users/register">Register</a> </li>
                </ul>
            </nav>
        </div>
        <!--Registration form-->            
        <form action="#" method="post">
            <h1>Register</h1>

            <ul>
                <% if(typeof errmsg != 'undefined') { %>
                    <% errmsg.forEach(err =>{ %>
                        <li><%=err.message %></li> 
                    <% }) %>
                <% } %>
            </ul>

            <form action = "/users/register" method = "POST">
            <div>
                <label for="name">Name</label>
                <input type="text" id="name" name="name" placeholder="Choose a name" required>
            </div>

            <div>
                <label for="email">Email</label>
                <input type="text" id="email" name="email" placeholder="Enter your email" required>
            </div>

            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Choose a password" required>
            </div>

            <div>
                <label for="password2">Confirm Password</label>
                <input type="password" id="password2" name="password2" placeholder="Confirm password" required>
            </div>

            <div>
                <input type="submit" value="Register">
            </div>
            <!--Login here link-->
            <div class="already-login">
                <span class="lgn">Already have an account?
                    <a href="/users/login">Login here</a>
                </span>
            </div>

        </form>

    <div>

</body>
</html>